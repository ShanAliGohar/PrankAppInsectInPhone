<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/earth_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drawer_main_icon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elsie_black"
        android:text="Prank App \n Insect In Phone"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/earth_img"
        app:layout_constraintStart_toStartOf="@+id/earth_img"
        app:layout_constraintTop_toBottomOf="@+id/earth_img" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/share_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Share App"
        android:fontFamily="@font/elsie"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/share_icon"
        app:layout_constraintStart_toEndOf="@+id/share_icon"
        app:layout_constraintTop_toTopOf="@+id/share_icon" />

    <ImageView
        android:id="@+id/rate_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/rate_icon"
        app:layout_constraintStart_toStartOf="@+id/share_icon"
        app:layout_constraintTop_toBottomOf="@id/share_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:fontFamily="@font/elsie"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rate_icon"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/rate_icon" />

    <ImageView
        android:id="@+id/feedback_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/feedback_icon"
        app:layout_constraintStart_toStartOf="@+id/rate_icon"
        app:layout_constraintTop_toBottomOf="@id/rate_icon" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:fontFamily="@font/elsie"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/feedback_icon"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/feedback_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>

